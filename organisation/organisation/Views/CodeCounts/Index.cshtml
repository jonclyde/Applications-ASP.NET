@model IEnumerable<organisation.Models.CodeCountVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Code Counts</h1>
<partial name="_CreateButtonPartial" />
<div>
    @if(Model.Count()>0)
    {
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IaC_Configurationv0_1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IaC_ARMv0_1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IaC_ARMv0_2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IaC_Terraformv0_1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apps_ASP_NET)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IaC_Configurationv0_1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IaC_ARMv0_1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IaC_ARMv0_2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IaC_Terraformv0_1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apps_ASP_NET)
                    </td>
                    <td>
                        <partial name="_ActionsButtons" model="item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
        <p>No code counts exist currently.</p>
    }
</div>