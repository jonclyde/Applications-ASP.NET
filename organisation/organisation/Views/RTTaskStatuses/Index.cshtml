@model IEnumerable<organisation.Models.RunthroughTaskStatusVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Runthrough Task Statuses</h1>
<div>
    <partial name="_CreateButtonPartial" />
    @if(Model.Count() > 0)
    {
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        <partial name="_ActionsButtons" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
        <p>No runthrough task statuses currently exist.</p>
    }
</div>