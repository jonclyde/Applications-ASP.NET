@model int
<a asp-action="Edit" asp-route-id="@Model" class="btn btn-warning">
    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
</a>
<a asp-action="Details" asp-route-id="@Model" class="btn btn-info">
    <i class="fas fa-info-circle" aria-hidden="true"></i>
</a>
<a asp-action="Delete" asp-route-id="@Model" onclick="return confirm('Are you sure you want to this record?')" class="btn btn-danger">
    <i class="fas fa-trash" aria-hidden="true"></i>
</a>